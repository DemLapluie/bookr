{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/profil-client.css') }}" />
{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    {% block content %}
        <h2 class="text-uppercase form_title font-weight-bold">Mon Espace PRO</h2>
        <span class="title_line"></span>
            <div class="row">
                <div class="col-12 col-md-8 offset-1">
                    Bienvenue sur l'interface de gestion de vos photos, <br>
                    vous permettant d'ajouter et/ou supprimer une ou des photos à votre profil.<br><br>
                    Ajoutez votre première photos !
                </div>
            </div>
        <br>

        <div class="row">
        <div class="col-12">
            {{ form_start(form) }}
            <h4 class="text-uppercase offset-1">Ajouter une photo</h4>
            <span class="title_line offset-1 col-xl-3"></span>

            <div class="col-xl-4 offset-1">
                {{ form_widget(form.nom) }}
            </div>
            <div class="form-btn-group offset-1 offset-md-9">
                <button type="submit" class="inscription_form_button">
                    Ajouter
                </button>
            </div>
            {{ form_end(form) }}
            <br>
            <div class="col-4 offset-8 btn-retour">
                <a href="{{ path('modification_profil_prestataire') }}" class="inscription_form_button">
                    Retour
                </a>
            </div>
            <h4 class="text-uppercase offset-1">Ma Galerie</h4>
            <span class="title_line offset-1 col-xl-3"></span>
            <div class="col-11 img-gallery">
            {% for photo in prestataire.photo %}

                <img width="200px" src="{{ asset('img/' ~ photo.nom) }}" />

            {% endfor %}
            </div>

        </div>

    {% endblock %}
    {% block footer %}
        {{ parent() }}
    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}