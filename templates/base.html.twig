<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BOOKR - site de e-réservation{% endblock %}</title>
        {% block stylesheets %}
            {# librairie #}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
            <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
            {# css #}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/burger_menu.css') }}" />
        {% endblock %}
        <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    </head>
    <body>
        {% block body %}

            {% block header %}
            <header>
                <div class="wrapper">
                    <div id="burger_menu">
                        <div></div>
                        <div></div>
                        <div></div>
                    </div>
                    <nav class="burger_nav">
                        <ul>
                            {% if app.user is null %}
                            <li>
                                <a href="{{ path('app_security_login') }}"><span class="text-uppercase">Connexion</span></a>
                            </li>
                            <li>
                                <a href="{{ path('app_security_register') }}"><span class="text-uppercase">Inscription</span></a>
                            </li>
                            {% else %}
                            <li class="nav-item">
                                <a href="{{ path('app_affichageprofiluser_affichageclient') }}" class="text-uppercase nav-link">
                                    {{ app.user}}
                                </a>
                                <div></div>
                            </li>
                            <li>
                                <a href="{{ path('app_security_logout') }}"><span class="text-uppercase">Deconnexion</span></a>
                            </li>
                            {% endif %}
                            <li>
                                <a class="text-uppercase">A propos<i class="fas fa-sort-down"></i></a>
                                <ul class="sous_menu">
                                    <li>
                                        <a href="#">L'équipe</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="text-uppercase">Nos services<i class="fas fa-sort-down"></i></a>
                                <ul class="sous_menu">
                                    <li>
                                        <a href="#">E-réservation</a>
                                    </li>
                                    <li>
                                        <a href="#">Futurs services</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                {% if app.user is null or app.user.prestataire is null %}
                                <a class="text-uppercase" href="{{ path('app_inscriptionprestataire_inscriptionprestataire') }}">Devenez prestataire</a>
                                {% elseif app.user.prestataire.certification == 'En attente' %}
                                <a class="text-uppercase" href="{{ path('inscription_validation') }}">Espace PRO</a>
                                {% else %}
                                <a class="text-uppercase" href="{{ path('modification_profil_prestataire') }}">Espace PRO</a>
                                {% endif %}

                            </li>
                        </ul>
                    </nav>

                    <nav class="MastHead" data-role="header" data-position="fixed" data-tap-toggle="false">
                        <div class="HeaderLft">
                            <a href="#"><span class="text-uppercase">a propos</span><i class="fas fa-sort-down"></i></a>
                            <a href="#"><span class="text-uppercase">nos services</span><i class="fas fa-sort-down"></i></a>
                        </div>
                        <div class="HeaderRgt">
                            {% if app.user is null %}
                                <a href="{{ path('app_security_login') }}"><span class="text-uppercase">Connexion</span></a>
                                <a href="{{ path('app_security_register') }}"><span class="text-uppercase">Inscription</span></a>


                            {% else %}
                                <a href="{{ path('app_affichageprofiluser_affichageclient') }}"><span class="text-uppercase">{{ app.user }}</span></a>
                                <a href="{{ path('app_security_logout') }}"><span class="text-uppercase">Deconnexion</span></a>

                            {% endif %}

                            {% if app.user is null or app.user.prestataire is null %}
                            <a href="{{ path('app_inscriptionprestataire_inscriptionprestataire') }}" class="parte_link"><span class="text-uppercase">Devenez prestataire</span></a>
                            {% elseif app.user.prestataire.certification == 'En attente' %}
                            <a href="{{ path('inscription_validation') }}" class="parte_link"><span class="text-uppercase">Espace PRO</span></a>
                            {% else %}
                            <a href="{{ path('modification_profil_prestataire') }}" class="parte_link"><span class="text-uppercase">Espace PRO</span></a>
                            {% endif %}
                            <a href="#" class="icon_nav"><i class="fab fa-facebook"></i></a>
                            <a href="#" class="icon_nav"><i class="fab fa-instagram"></i></a>
                        </div>
                    </nav>

                    <div class="HeaderLogo">
                        <a href="{{ path('app_index_accueil') }}">
                            <img src="{{ asset('/img/logo_header.png') }}">
                        </a>

                        <br>
                        <p class="text-uppercase">e-réservation esthetique</p>
                    </div><div class="clearfix"></div>
                </div>

            </header>
            <div class="clearfix"></div>
            <div class="container search col-12">
                <div class="container">
                    {# Affichage des messages du bootstrap #}
                    {% for type, flashes in app.session.flashBag.all %}
                        {% for message in flashes %}
                            {# pour la class alert-danger du bootstrap #}
                            {% if type == 'error' %}
                                {% set type = 'danger' %}
                            {% endif %}
                            <div class="alert alert-{{ type }}">
                                {{ message|raw }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            {% endblock %}
            {% block content %}
                    <div class="cat_type_nav">
                        <nav>
                            <a href="{{ path('recherche_presta', {"recherche": {'profession': 'Coiffeur'}}) }}">Coiffeur</a>
                            <a href="{{ path('recherche_presta', {"recherche": {'profession': 'Prothésiste Ongulaire'}}) }}">Prothesiste ongulaire</a>
                            <a href="{{ path('recherche_presta', {"recherche": {'profession': 'Barbier'}}) }}">Barbier</a>
                            <a href="{{ path('recherche_presta', {"recherche": {'profession': 'Styliste du Regard'}}) }}">Stylist des cils</a>
                            <a href="{{ path('recherche_presta', {"recherche": {'profession': 'MakeUp Artist'}}) }}">MakeUp Artist</a>
                        </nav>
                    </div>

            {% endblock %}


            {% block footer %}
            </div>
            <footer>
                <nav class="nav_bot_left">
                    <a href="#">Mentions légales</a>
                    <a href="#">Contact</a>
                    <a href="#">FAQ</a>
                </nav>
            </footer>
            {% endblock %}
        <div class="container">
            {# Affichage des messages du bootstrap #}
            {% for type, flashes in app.session.flashBag.all %}
                {% for message in flashes %}
                    {# pour la class alert-danger du bootstrap #}
                    {% if type == 'error' %}
                        {% set type = 'danger' %}
                    {% endif %}
                    <div class="alert alert-{{ type }}">
                        {{ message|raw }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="container">
            {% block javascripts %}
                <!-- librairies -->
                <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
                <!-- //Js -->
                <script src="{{ asset('js/burger_menu.js') }}"></script>

            {% endblock %}
        {% endblock %}

    </body>
</html>
