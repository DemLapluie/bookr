{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/inscription-prest.css') }}" />
{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    {% block content %}
        <div class="inscription_container row">
            <div class="inscription_form">
                <h2 class="text-uppercase inscription_form_title">Mon profil pro</h2>
                <span class="title_line"></span>
                <div class="col-md-6 form_content">
                    <h4>Activation du profil 1/2</h4>
                    <span class="title_line"></span>
                    <div class="row">
                        <div class="col-12">
                            {{ form_start(form) }}

                            <span class="label_cni">Photocopie pièce d'identité du dirigeant de l'entreprise</span>
                            <div class="col-md-6 col-sm-6 cni">
                                {{ form_widget(form.cni) }}
                            </div>
                            <div class="col-md-8 col-xl-5 col-sm-6 form-field">
                                {{ form_widget(form.nom_entreprise) }}
                            </div>
                            <div class="col-md-8 col-xl-5 col-sm-6 form-field">
                                {{ form_widget(form.numero_siret) }}
                                {{ form_errors(form.numero_siret) }}
                            </div>
                            <div class="row col-12">
                                <div class="col-md-8 col-sm-9 form-field">
                                    {{ form_widget(form.adresse_entreprise) }}
                                </div>
                                <div class="col-md-4 col-sm-6 form-field">
                                    {{ form_widget(form.tel_entreprise) }}
                                </div>
                            </div>
                            <div class="row col-9 col-sm-12">
                                <div class="col-md-4 col-sm-4 ville">
                                    {{ form_widget(form.ville_entreprise) }}
                                </div>
                                <div class="col-md-4 col-sm-4 cp">
                                    {{ form_widget(form.cp_entreprise) }}
                                </div>
                            </div>
                            <div class="row col-9 col-sm-12">
                                <div class="col-md-6 lieu">
                                    {{ form_row(form.profession) }}
                                </div>
                                <div class="col-md-6 lieu">
                                    {{ form_row(form.lieu_prestation) }}
                                </div>
                                <div class="col-md-6 lieu">
                                    {{ form_row(form.jour) }}
                                </div>
                                <div class="col-md-6 horraire">
                                    <div id ="horraire-lundi">
                                    {{ form_row(form.horaires.lundi_ouverture) }}
                                    {{ form_row(form.horaires.lundi_fermeture) }}
                                    </div>
                                    <div id ="horraire-mardi">
                                    {{ form_row(form.horaires.mardi_ouverture) }}
                                    {{ form_row(form.horaires.mardi_fermeture) }}
                                    </div>
                                    <div id ="horraire-mercredi">
                                    {{ form_row(form.horaires.mercredi_ouverture) }}
                                    {{ form_row(form.horaires.mercredi_fermeture) }}
                                    </div>
                                    <div id ="horraire-jeudi">
                                    {{ form_row(form.horaires.jeudi_ouverture) }}
                                    {{ form_row(form.horaires.jeudi_fermeture) }}
                                    </div>
                                    <div id ="horraire-vendredi">
                                    {{ form_row(form.horaires.vendredi_ouverture) }}
                                    {{ form_row(form.horaires.vendredi_fermeture) }}
                                    </div>
                                    <div id ="horraire-samedi">
                                    {{ form_row(form.horaires.samedi_ouverture) }}
                                    {{ form_row(form.horaires.samedi_fermeture) }}
                                    </div>
                                    <div id ="horraire-dimanche">
                                    {{ form_row(form.horaires.dimanche_ouverture) }}
                                    {{ form_row(form.horaires.dimanche_fermeture) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-btn-group offset-1 offset-md-9">
                            <button type="submit" class="inscription_form_button">
                                Valider
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        </div>

    {% endblock %}
    {% block footer %}
        {{ parent() }}
        <script src="{{ asset('js/afficher_horraire.js') }}"></script>
    {% endblock %}
{% endblock %}
