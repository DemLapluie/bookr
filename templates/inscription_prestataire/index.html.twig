{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/inscription.css') }}" />
{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    {% block content %}
        <div class="inscription_container row">
                <div class="inscription_form">
                    <h2 class="text-uppercase inscription_form_title">Mon profil pro</h2>
                    <span class="title_line"></span>
                    <div class="row">
                        <div class="col-xl-6">
                            {{ form_start(form) }}

                            <div class="col-xl-9">
                                {{ form_widget(form.nom_entreprise) }}
                            </div>
                            <div class="col-xl-9">
                                {{ form_widget(form.adresse_entreprise) }}
                            </div>
                            <div class="col-xl-9">
                                {{ form_widget(form.ville_entreprise) }}
                            </div>
                            <div class="col-xl-10">
                                {{ form_widget(form.cp_entreprise) }}
                            </div>
                            <div class="col-xl-12">
                                {{ form_widget(form.adresse_entreprise) }}
                            </div>
                            <div class="col-xl-12">
                                <div class="row">
                                    <div class="col-xl-6">
                                        {{ form_widget(form.lieu_prestation) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {# <div class="col-xl-6 inscription_form_right">
                            <div class="col-xl-10">
                                {{ form_widget(form.email) }}
                            </div>
                            <div class="col-xl-8">
                                {{ form_widget(form.tel) }}
                            </div>
                            <div class="col-xl-8">
                                {{ form_widget(form.pseudo) }}
                            </div>
                            <div class="col-xl-8">
                                {{ form_widget(form.plainPassword) }}
                            </div>
                        </div>
                        <div class="form-btn-group offset-1 offset-xl-9">
                            <button type="submit" class="inscription_form_button">
                                Valider
                            </button>
                        </div>#}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

    {% endblock %}
    {% block footer %}
        {{ parent() }}
    {% endblock %}
{% endblock %}